<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="15dp">

    <ImageView
        android:id="@+id/tournament_logo"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginStart="20dp"
        android:adjustViewBounds="true"
        android:cropToPadding="true"
        android:scaleType="fitCenter"
        tools:ignore="ContentDescription" />

    <TableLayout
        android:id="@+id/tournament_info"
        android:layout_width="280dp"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tournament_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:textAlignment="viewStart"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/blue" />

        <TextView
            android:id="@+id/tournament_dates"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:textAlignment="viewStart"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/competition_dates"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:textAlignment="viewStart"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/final_dates"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:textAlignment="viewStart"
            android:textSize="18sp" />

        <include
            android:id="@+id/team_count"
            layout="@layout/fragment_wrap_label_field"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <include
            android:id="@+id/total_team_count"
            layout="@layout/fragment_wrap_label_field"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <include
            android:id="@+id/total_plus_transfer_team_count"
            layout="@layout/fragment_wrap_label_field"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <include
            android:id="@+id/champions"
            layout="@layout/fragment_label_team2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </TableLayout>

</LinearLayout>
