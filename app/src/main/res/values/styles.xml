<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="CustomTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabTextAppearance">@style/CustomTabLayout.Text</item>
        <item name="tabIndicatorHeight">2dp</item>
        <item name="tabIndicatorColor">@color/blue</item>
        <item name="tabMinWidth">200dp</item>
        <item name="tabPaddingStart">10dp</item>
        <item name="tabPaddingBottom">-10dp</item>
    </style>
    <style name="CustomTabLayout.Text" parent="TextAppearance.AppCompat.Button">
        <item name="android:textColor">@drawable/tab_text_color</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
    </style>
</resources>
