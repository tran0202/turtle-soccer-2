<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="CustomTabLayoutBlue" parent="Widget.Design.TabLayout">
        <item name="tabTextAppearance">@style/CustomTabLayoutBlue.Text</item>
        <item name="tabIndicatorHeight">2dp</item>
        <item name="tabIndicatorColor">@color/blue</item>
        <item name="tabMinWidth">200dp</item>
        <item name="tabPaddingStart">5dp</item>
        <item name="tabPaddingEnd">5dp</item>
        <item name="tabPaddingTop">15dp</item>
    </style>
    <style name="CustomTabLayoutBlue.Text" parent="TextAppearance.AppCompat.Button">
        <item name="android:textColor">@drawable/tab_text_color_blue</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
    </style>
    <style name="CustomTabLayoutOrange" parent="Widget.Design.TabLayout">
        <item name="tabTextAppearance">@style/CustomTabLayoutOrange.Text</item>
        <item name="tabIndicatorHeight">2dp</item>
        <item name="tabIndicatorColor">@color/orange</item>
        <item name="tabMinWidth">200dp</item>
        <item name="tabPaddingStart">5dp</item>
        <item name="tabPaddingEnd">5dp</item>
        <item name="tabPaddingTop">15dp</item>
    </style>
    <style name="CustomTabLayoutOrange.Text" parent="TextAppearance.AppCompat.Button">
        <item name="android:textColor">@drawable/tab_text_color_orange</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
    </style>
</resources>
